# =============================================================================
# PostgreSQL S3 Backup - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
# The database to backup/restore
PGHOST=your-postgres-host.example.com
PGPORT=5432
PGDATABASE=your_database_name
PGUSER=your_db_user
PGPASSWORD=your_secure_password

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
# AWS credentials for S3 access
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=

# -----------------------------------------------------------------------------
# S3 Configuration
# -----------------------------------------------------------------------------
# S3 bucket for storing backups
S3_BUCKET=your-backup-bucket-name
S3_BACKUP_PATH=postgres-backups

# -----------------------------------------------------------------------------
# Cron Configuration (for automated backups)
# -----------------------------------------------------------------------------
# Cron schedule format: minute hour day month weekday
# Example: Daily at 2 AM
CRON_SCHEDULE=0 2 * * *

# Timezone
TZ=UTC

# -----------------------------------------------------------------------------
# Optional: Custom Backup Options
# -----------------------------------------------------------------------------
# Uncomment to enable compression
# BACKUP_COMPRESS=true

# Uncomment to use plain SQL format instead of custom format
# BACKUP_FORMAT=plain
